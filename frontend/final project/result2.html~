	var current = "";
        function loadQuestion(id) {
            document.getElementById("question").innerHTML = "";
	    for(i = 0; i< jdata.results[id].questions.length;i++ ){
		document.getElementById("question").innerHTML += jdata.results[id].questions[i].question + "<br> <input id = 'q" +i+"' type='text' name='q' ><br>";
		}
	    current = id;
        }
 	function checkAnswer() {
	    var tf = true;
	    for(i = 0; i < jdata.results[current].questions.length;i++){
		if(document.getElementById("q" + i).value != jdata.results[id].questions[i].answer ){
			tf = false;			
			}
		}
            if(tf){
		window.alert("right");		
		}else{
		window.alert("wrong");		

		}
        }

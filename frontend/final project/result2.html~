    };  
    var data = { results : [ +
	{ name:"John" , questions:[{question:"How are you?",answer:"I am fine"},{question:"How are you?",answer:"I am fine"}] }, +
	{ name:"Bob" , questions:[{question:"How are you 2?",answer:"I am fine"}] }, +
	{ name:"Jason" , questions:[{question:"How are you 3?",answer:"I am fine"}] },} 
					]}";
    var jdata = JSON.parse(data);
    function loadResult(){
	alert("dd");
    	for(i = 0; i < jdata.results.length;i++){
	 document.getElementById("thumbnails").innerHTML+=("<a href='#' onclick='loadQuestion(" + jdata[i].name +");'> text </a> <br>");
      }
